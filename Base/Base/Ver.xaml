             x:Class="Base.Ver"
             BackgroundColor="DimGray">
    
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Resultados Almacenados" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" FontSize="30" FontAttributes="Bold" TextColor="White"/>
