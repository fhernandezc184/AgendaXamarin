                <ListView x:Name="listView" IsEnabled="False" SeparatorColor="White" />
            </ScrollView>
            <Button x:Name="btnLimpiar" Text="Limpiar"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>